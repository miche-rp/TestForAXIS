<p id="notice"><%= notice %></p>

<h1>Homes</h1>

<iframe src="https://frozen-fjord-36346.herokuapp.com/api/v1/ad_serve/1/click_ad" width="100%" height="100%" frameborder="0" allowfullscreen scrolling="no" sandbox="allow-top-navigation allow-scripts allow-forms"></iframe>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.name %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %>
